{
  "name": "anime-avatar",
  "version": "0.1.0",
  "description": "A configurable AI anime avatar React component with animations",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check",
    "prepare": "husky || true",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "react",
    "anime",
    "avatar",
    "ai",
    "webgl",
    "animation",
    "configurable"
  ],
  "author": "",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/konard/anime-avatar"
  },
  "homepage": "https://konard.github.io/anime-avatar",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,cjs}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "prettier --check"
    ],
    "*.{md,json,css}": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
